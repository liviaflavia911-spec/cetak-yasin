<section class="py-16 bg-gray-50" id="gallery">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-900 mb-4">
      Galeri Produk
    </h2>
    <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
      Hasil cetak buku Yasin dari pelanggan kami
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {galleryImages.map(image => (
        <div class="relative group">
          <img 
            src={image.src} 
            alt={image.alt}
            class="w-full h-64 object-cover rounded-lg shadow-sm transition-transform duration-300 group-hover:scale-105"
          />
          <div class="absolute inset-0 bg-black bg-opacity-40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-lg flex items-center justify-center">
            <p class="text-white text-center font-medium px-4">
              {image.alt}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>